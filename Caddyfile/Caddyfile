:80 {
	encode gzip

	# API -> backend
	handle /api/* {
		reverse_proxy backend:5001
	}

	# WebSocket (если используется)
	handle /socket.io/* {
		reverse_proxy backend:5001
	}

	# Uploads -> backend
	handle /uploads/* {
		reverse_proxy backend:5001
	}

	# Everything else -> frontend
	handle {
		reverse_proxy frontend:3000
	}

	log {
		output stdout
	}
}
