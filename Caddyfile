{
	# Укажите почту для регистрации сертификатов Let's Encrypt
	email admin@granovskiy-crm.online
}

# Основной домен
Granovskiy-crm.online {
	encode gzip
	log {
		output stdout
	}

	# API и загрузки идут на backend
	handle_path /api* {
		reverse_proxy backend:5001
	}
	handle_path /uploads* {
		reverse_proxy backend:5001
	}

	# Всё остальное — на фронтенд (SPA)
	handle {
		reverse_proxy frontend:3000
	}
}

# Редирект с www на основной домен
www.Granovskiy-crm.online {
	redir https://Granovskiy-crm.online{uri}
}
