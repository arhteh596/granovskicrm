{
    "name": "crm-backend",
    "version": "1.0.0",
    "description": "CRM система для звонков - Backend API",
    "main": "dist/server.js",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=9.0.0"
    },
    "scripts": {
        "dev": "nodemon --exec ts-node src/server.ts",
        "build": "tsc && node -e \"const fs=require('fs'); const path=require('path'); const cp=(s,d)=>{ if(!fs.existsSync(s)) return; fs.mkdirSync(path.dirname(d),{recursive:true}); fs.cpSync(s,d,{recursive:true}); }; cp('src/telegram/scripts','dist/telegram/scripts'); cp('src/db/schema.sql','dist/db/schema.sql'); cp('src/db/migrations','dist/db/migrations'); cp('migrations','dist/migrations');\"",
        "start": "node dist/server.js",
        "vercel-build": "npm run build",
        "db:migrate": "node dist/db/migrate.js",
        "db:migrate:dev": "node -r ts-node/register src/db/migrate.ts",
        "db:init:remote": "node scripts/init-remote-db.js"
    },
    "keywords": [
        "crm",
        "calls",
        "api"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "express": "^4.18.2",
        "pg": "^8.11.3",
        "dotenv": "^16.3.1",
        "bcrypt": "^5.1.1",
        "jsonwebtoken": "^9.0.2",
        "cors": "^2.8.5",
        "multer": "^1.4.5-lts.1",
        "csv-parser": "^3.0.0",
        "winston": "^3.11.0",
        "web-push": "^3.6.5"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.5",
        "@types/pg": "^8.10.9",
        "@types/bcrypt": "^5.0.2",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/cors": "^2.8.17",
        "@types/multer": "^1.4.11",
        "typescript": "^5.3.3",
        "ts-node": "^10.9.2",
        "nodemon": "^3.0.2"
    }
}